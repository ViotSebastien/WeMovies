{% extends 'base.html.twig' %}

{% block title %}MovieController!{% endblock %}

{% block body %}

<div class="nav">
  <h3>We Movie</h3>
  {{ form(search) }}
</div>

<div class="promo">
{% for listMovie in listMovies|slice(0,1) %}
  <li>Titre :{{ listMovie.title }}</li>
    <iframe width="420" height="315" src="https://www.youtube.com/embed/{{ promo }}?controls=0"></iframe>
  <li>Note : {{ listMovie.avis }} / 10</li>
{% endfor %}
</div>
<div class="genre">
{{ form(form) }}
</div>
<div class="listmovie">
  <ul>
    <h3>Top office : </h3>
  {% for listMovie in listMovies %}
    <li><h4>Titre :{{ listMovie.title }}</h4></li>
    <li><img src="https://image.tmdb.org/t/p/w500/{{listMovie.image}}"height=200px width=300px alt=""></li>
    <li>
      <a href="/show/{{ listMovie.id }}" onclick="javascript:window.open(this.href,'nom_Popup','height=400', 'width=200' ,'location=no' ,'resizable=yes');return false;">
        <button type="button" name="button" class="btn">Bande d'annonce</button>
      </a>
    </li>
    <li><strong>Note : {{ listMovie.avis }} / 10</strong></li>
    <li> Description : {{ listMovie.description }}</li>
    <hr>
{% endfor %}
</ul>
</div>
{% endblock %}
